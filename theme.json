{
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"alignWide": true,
		"layout": {
			"contentSize": "680px",
			"wideSize": "840px",
			"allowEditing": true
		},
		"dimensions": {
			"minHeight": true
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true,
			"units": ["px", "em", "rem", "vh", "vw", "%"],
			"spacingScale": {
				"operator": "*",
				"increment": 1.25,
				"steps": 7,
				"mediumStep": 1.25,
				"unit": "rem"
			}
		},
		"color": {
			"custom": true,
			"palette": [
				{
					"slug": "dark-titles",
					"color": "#212020", 
					"name": "Dark titles"
				},
				{
					"slug": "dark-text",
					"color": "#3f3f3f",
					"name": "Dark text"
				},
				{
					"slug": "subdued-text",
					"color": "#B5B5B5",
					"name": "Subdued text"
				},
				{
					"slug": "dark-links",
					"color": "#212020",
					"name": "Dark links"
				},
				{
					"slug": "light-titles",
					"color": "#FFFFFF",
					"name": "Light titles"
				},
				{
					"slug": "light-text",
					"color": "#E1E1E1",
					"name": "Light text"
				},
				{
					"slug": "light-links",
					"color": "#FFFFFF",
					"name": "Light links"
				},
				{
					"slug": "surface",
					"color": "#FFFFFF",
					"name": "Surface"
				},
				{
					"slug": "light-background",
					"color": "#EAEAEA",
					"name": "Light Background"
				},
				{
					"slug": "dark-background",
					"color": "#212020",
					"name": "Dark Background"
				},
				{
					"slug": "highlight",
					"color": "#FFE3F1",
					"name": "Accent"
				},
				{
					"slug": "light-border",
					"color": "#D4D4D4",
					"name": "Border"
				},
				{
					"slug": "dark-border",
					"color": "#4A4A4A",
					"name": "Dark border"
				},
				{
					"slug": "form-background-light",
					"color": "#FFFFFF",
					"name": "Form background light"
				},
				{
					"slug": "form-background-dark",
					"color": "#4A4A4A",
					"name": "Form background dark"
				}
			]
		},
		"typography": {
			"customFontSize": true,
			"dropCap": false,
			"fluid": true,
			"fontStyle": true,
			"fontWeight": true,
			"letterSpacing": true,
			"lineHeight": true,
			"textDecoration": true,
			"textTransform": true,
			"fontSizes": [
				{
					"slug": "small-body",
					"size": "1rem",
					"name": "Small body"
				},
				{
					"slug": "medium-body",
					"size": "1.5rem",
					"name": "Medium body"
				},
				{
					"slug": "large-title",
					"size": "3rem",
					"name": "Large title"
				},
				{
					"slug": "x-large-title",
					"size": "4rem",
					"name": "Extra large title"
				},
				{
					"slug": "xx-large-title",
					"size": "6rem",
					"name": "Double extra large title"
				},
				{
					"slug": "huge-title",
					"size": "8rem",
					"name": "Huge title"
				}
			],
			"fontFamilies": [
				{
					"fontFamily": "'DM Serif Display', serif",
					"slug": "dm-serif",
					"name": "DM Serif",
					"fontWeight": "400"
				},
				{
					"fontFamily": "'DM Sans', sans-serif",
					"slug": "dm-sans",
					"name": "DM Sans",
					"fontWeight": "100 900"
				}
			]
		},
		"blocks": {
			"core/navigation": {
				"layout": {
				"overlayMenu": "never"
				}
			},
			"core/post-content": {
				"layout": {
					"allowInheriting": true
				}
			}
		}
	},
	"styles": {
		"css": ".wp-block-post-content li { margin-bottom: 0.75rem; } .wp-block-post-content li:last-child { margin-bottom: 0; }",
		"color": {
			"background": "var(--wp--preset--color--light-background)",
			"text": "var(--wp--preset--color--dark-text)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--dm-sans)",
			"fontSize": "var(--wp--preset--font-size--medium-body)",
			"lineHeight": "1.4"
		},
		"spacing": {
			"blockGap": "1.25rem"
		},
		"blocks": {
			"core/paragraph": {
				"typography": { "fontSize": "var(--wp--preset--font-size--medium-body)" }
			}
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--dark-links)"
				},
				"typography": {
					"textDecoration": "underline"
				},
				":hover": {
					"typography": {
						"textDecoration": "none"
					}
				}
			},
			"heading": {
				"color": {
					"text": "var(--wp--preset--color--dark-titles)"
				},
				"spacing": {
					"padding": {
						"top": "0.5rem"
					},
					"margin": {
						"top": "0",
						"bottom": "0"
					}
				}
        	},
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--dm-serif)",
					"fontSize": "var(--wp--preset--font-size--x-large-title)",
					"lineHeight": "1.2"
				},
				"spacing": {
					"padding": {
						"top": "0"
					},
					"margin": {
						"top": "0",
						"bottom": "0"
					}
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--dm-serif)",
					"fontSize": "var(--wp--preset--font-size--large-title)",
					"lineHeight": "1.2"
				}
			},
			
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--dm-sans)",
					"fontSize": "var(--wp--preset--font-size--large-title)",
					"lineHeight": "1.2"
				}
			},
			"h4": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--dm-sans)",
					"fontSize": "var(--wp--preset--font-size--medium-body)",
					"lineHeight": "1.2"
				}
			},
			"h5": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--dm-sans)",
					"fontSize": "var(--wp--preset--font-size--medium-body)",
					"textTransform": "uppercase",
					"lineHeight": "1.2"
				}
			},
			"h6": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--dm-sans)",
					"fontSize": "var(--wp--preset--font-size--small-body)",
					"textTransform": "uppercase",
					"lineHeight": "1.2"
				}
			}
		}
	}
}
