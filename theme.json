{
	"version": 2,
	"settings": {
		"appearanceTools": true,
		"layout": {
			"contentSize": "695px",
			"wideSize": "840px"
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true,
			"units": ["px", "em", "rem", "vh", "vw", "%"],
			"spacingScale": {
				"operator": "*",
				"increment": 1.25,
				"steps": 7,
				"mediumStep": 1.25,
				"unit": "rem"
			}
		},
		"color": {
			"custom": true,
			"palette": [
				{
					"slug": "dark-titles",
					"color": "#212020", 
					"name": "Dark background titles"
				},
				{
					"slug": "dark-text",
					"color": "#3f3f3f",
					"name": "Dark background text"
				},
				{
					"slug": "dark-links",
					"color": "#212020",
					"name": "Dark background links"
				},
				{
					"slug": "light-titles",
					"color": "#FFFFFF",
					"name": "Light background titles"
				},
				{
					"slug": "light-text",
					"color": "#E1E1E1",
					"name": "Light background text"
				},
				{
					"slug": "light-links",
					"color": "#FFFFFF",
					"name": "Light background links"
				},
				{
					"slug": "surface",
					"color": "#FFFFFF",
					"name": "Surface"
				},
				{
					"slug": "light-background",
					"color": "#EAEAEA",
					"name": "Light Background"
				},
				{
					"slug": "dark-background",
					"color": "#212020",
					"name": "Dark Background"
				},
				{
					"slug": "highlight",
					"color": "#FFE3F1",
					"name": "Accent"
				},
				{
					"slug": "border",
					"color": "#D4D4D4",
					"name": "Border"
				}
			]
		},
		"typography": {
			"customFontSize": true,
			"dropCap": false,
			"fluid": true,
			"fontStyle": true,
			"fontWeight": true,
			"letterSpacing": true,
			"lineHeight": true,
			"textDecoration": true,
			"textTransform": true,
			"fontSizes": [
				{
					"slug": "small",
					"size": "1rem",
					"name": "Small"
				},
				{
					"slug": "medium",
					"size": "1.5rem",
					"name": "Medium"
				},
				{
					"slug": "large",
					"size": "3rem",
					"name": "Large"
				},
				{
					"slug": "x-large",
					"size": "4rem",
					"name": "Extra Large"
				},
				{
					"slug": "xx-large",
					"size": "6rem",
					"name": "Double Extra Large"
				},
				{
					"slug": "huge",
					"size": "8rem",
					"name": "Huge"
				}
			],
			"fontFamilies": [
				{
					"fontFamily": "'DM Serif Display', serif",
					"slug": "dm-serif",
					"name": "DM Serif",
					"fontWeight": "400"
				},
				{
					"fontFamily": "'DM Sans', sans-serif",
					"slug": "dm-sans",
					"name": "DM Sans",
					"fontWeight": "100 900"
				}
			]
		},
		"blocks": {
			"core/navigation": {
				"layout": {
				"overlayMenu": "never"
				}
			}
		}
	},
	"styles": {
		"css": ".wp-block-post-content li { margin-bottom: 0.75rem; } .wp-block-post-content li:last-child { margin-bottom: 0; }",
		"color": {
			"background": "var(--wp--preset--color--light-background)",
			"text": "var(--wp--preset--color--dark-text)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--dm-sans)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "1.4"
		},
		"spacing": {
			"blockGap": "1.25rem"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--dark-links)"
				},
				"typography": {
					"textDecoration": "underline"
				},
				":hover": {
					"typography": {
						"textDecoration": "none"
					}
				}
			},
			"heading": {
				"color": {
					"text": "var(--wp--preset--color--dark-titles)"
				},
				"spacing": {
					"padding": {
						"top": "0.5rem"
					},
					"margin": {
						"top": "0",
						"bottom": "0"
					}
				}
        	},
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--dm-serif)",
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"lineHeight": "1.2"
				},
				"spacing": {
					"padding": {
						"top": "0"
					},
					"margin": {
						"top": "0",
						"bottom": "0"
					}
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--dm-serif)",
					"fontSize": "var(--wp--preset--font-size--large)",
					"lineHeight": "1.2"
				}
			},
			
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--dm-sans)",
					"fontSize": "var(--wp--preset--font-size--large)",
					"lineHeight": "1.2"
				}
			},
			"h4": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--dm-sans)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"lineHeight": "1.2"
				}
			},
			"h5": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--dm-sans)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"textTransform": "uppercase",
					"lineHeight": "1.2"
				}
			},
			"h6": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--dm-sans)",
					"fontSize": "var(--wp--preset--font-size--small)",
					"textTransform": "uppercase",
					"lineHeight": "1.2"
				}
			}
		}
	}
}
